        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/GridViewColumnHeader.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <BorderGapMaskConverter x:Key="BorderGapMaskConverter"/>

